#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 i.Noに登録しょう！
      %h5 新規アカウントの作成
      = render "devise/shared/links"
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            .field-label__up
              = f.label :ユーザーネーム
            .field-label__down
              .field-label__down--must 必須
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            .field-label__up
              = f.label :メールアドレス
            .field-label__down
              .field-label__down--must 必須
          .field-input
            = f.email_field :email
        .field
          .field-label
            .field-label__up
              .p
                = f.label :パスワード
              .p
                .field-label__up--extraText
                  (英数字8文字以上)
            .field-label__down
              .field-label__down--must 必須
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            .field-label__up
              = f.label :パスワードの確認
            .field-label__down
              .field-label__down--must 必須
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        .field
          .field-label
            .field-label__up
              .p
                = f.label :店舗管理者コード
              .p
                .field-label__up--extraText
                  (店舗管理者の場合はi.Noから発行されたコードを入力)
          .field-input
            = f.text_field :owner_password, autocomplete: "off"
        .actions
          = f.submit "アカウントを作成", class: 'btn'
